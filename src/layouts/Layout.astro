---
import "@fontsource/poppins";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />

    <meta
      name="description"
      content="Bienvenido a MagicSky, tu sitio de decoraciones y detalles favorito.¿Estás list@? No dudes en contactarme."
    />
    <link
      rel="shorcut icon"
      type="image/x-icon"
      href="https://magic-sky.vercel.app/images/logo.jpg"
    />

    <link rel="favicon" href="https://magic-sky.vercel.app/logo.png" />
    <link rel="apple-touch-icon" href="https://magic-sky.vercel.app/logo.png" />

    <meta name="theme-color " content="#FF00C7" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="MagicSky - Decoraciones y detalles" />
    <meta
      name="twitter:image"
      content="https://magic-sky.vercel.app/galery/4.jpeg"
    />
    <meta
      name="twitter:url"
      content="https://magic-sky.vercel.app/index.html"
    />
    <meta
      name="twitter:description"
      content="Bienvenido a MagicSky, tu sitio de decoraciones y detalles favorito.¿Estás list@? No dudes en contactarme."
    />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="MagicSky - Decoraciones y detalles" />
    <meta
      property="og:image"
      content="https://magic-sky.vercel.app/galery/4.jpeg"
    />
    <meta property="og:url" content="https://magic-sky.vercel.app/index.html" />
    <meta
      property="og:description"
      content="Bienvenido a MagicSky, tu sitio de decoraciones y detalles favorito.¿Estás list@? No dudes en contactarme."
    />

    <link rel="canonical" href="https://magic-sky.vercel.app/index.html" />
  </head>
  <body>
    <Header />

    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html {
    font-family: "Poppins", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion) {
    html {
      scroll-behavior: auto;
    }
  }

  main {
    background: rgb(2, 0, 36);
    background: linear-gradient(
      180deg,
      rgba(2, 0, 36, 1) 0%,
      rgba(55, 98, 215, 1) 0%,
      rgba(2, 30, 66, 1) 0%,
      rgba(1, 8, 17, 1) 0%,
      rgba(67, 13, 173, 1) 0%,
      rgba(151, 1, 140, 1) 100%,
      rgba(154, 1, 139, 1) 100%,
      rgba(0, 12, 23, 1) 100%,
      rgba(2, 50, 87, 1) 100%
    );
  }
</style>
