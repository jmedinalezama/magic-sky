---
import { Navbar } from "./Navbar.jsx";
import FacebookIcon from "../icons/FacebookIcon.astro";
import InstagramIcon from "../icons/InstagramIcon.astro";
import WhatsappIcon from "../icons/WhatsappIcon.astro";
---

<header
  class={`
  relative
  bg-center bg-no-repeat bg-cover
  min-h-screen`}
>
  <Navbar client:load />

  <section
    class={`
    relative z-20 min-h-screen flex flex-col justify-center items-center gap-y-4
    max-w-[800px] mx-auto
    md:flex-row md:justify-start
    `}
  >
    <picture
      class="animation-show w-32 h-32 md:w-[40%] md:h-full overflow-hidden mb-8 md:mb-0 md:mt-20"
    >
      <img
        class="w-full h-full md:w-64 md:h-64 md:mx-auto rounded-lg shadow-md"
        src="/images/logo.jpg"
        alt="Magic Sky - Decoraciones y detalles"
      />
    </picture>

    <article class="md:w-[60%] md:flex md:flex-col md:mt-20">
      <h1
        class="animation-show text-4xl text-center text-pretty font-black italic text-white"
      >
        "Tus ideas las hacemos <span class="text-[#FF00C7] font-black"
          >realidad</span
        >"
      </h1>
      <p class="animation-show flex justify-center items-center gap-2 my-2">
        <span class="text-lg font-bold text-[#00FFF0]">Thalia Leiva</span>
        <a
          href="https://www.facebook.com/thalia.leiva.9"
          target="_blank"
          rel="noreferrer noopenner"
          class="hover:scale-110 transition duration-150"
          ><FacebookIcon class="size-6" /></a
        >
        <a
          href="https://www.instagram.com/thalia.leiva.9/"
          target="_blank"
          rel="noreferrer noopenner"
          class="hover:scale-110 transition duration-150"
          ><InstagramIcon class="size-6" /></a
        >
      </p>
      <div class="flex justify-center items-center mt-6">
        <a
          href="https://wa.me/51926262124/?text=Hola,%20más%20%20información,%20por%20favor."
          target="_blank"
          rel="noreferrer noopenner"
          class="animation-show bg-rose-500 py-2 px-6 rounded-md text-white font-bold text-xl flex justify-center gap-x-2"
        >
          ¿Estás listo?
          <WhatsappIcon class="size-6" />
        </a>
      </div>
    </article>
  </section>

  <div
    class={`
    absolute top-0 bottom-0 z-0
    bg-gradient-to-t from-rose-900/80 via-black/50 to-black/30 
    h-screen w-full`}
  >
  </div>
</header>

<style>
  header {
    background-image: url("/images/bg-header.jpg");
  }

  .animation-show {
    transform: translateY(-100%);
    opacity: 0;
    transition:
      transform 1s ease,
      opacity 0.5s ease-in;
  }

  .animation-show.show {
    transform: translateY(0);
    opacity: 1;
  }

  .animation-show:hover {
    transform: scale(1.05);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const $listElements = document.querySelectorAll(".animation-show");

    $listElements.forEach((el) => {
      el.classList.add("show");
    });
  });
</script>
